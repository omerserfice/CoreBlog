@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


      
<div class="col-lg-12 px-md-5 py-5">
    @foreach (var item in Model)
    {
        <div><h5>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</h5></div>
        <div class="row pt-md-2">

            <h1 class="mb-3">@item.BlogTitle</h1><br />
            <p>
                <img src="~/blog/images/image_1.jpg" alt="" class="img-fluid">
            </p>

            <p>@item.BlogContent</p>

            <div class="tag-widget post-tag-container mb-5 mt-5">
                <div class="tagcloud">
                    <a href="#" class="tag-cloud-link">Life</a>
                    <a href="#" class="tag-cloud-link">Sport</a>
                    <a href="#" class="tag-cloud-link">Tech</a>
                    <a href="#" class="tag-cloud-link">Travel</a>
                </div>
            </div>

            <div class="about-author d-flex p-4 bg-light">
                <div class="bio mr-5">
                    <img src="~/blog/images/person_1.jpg" alt="Image placeholder" class="img-fluid mb-4">
                </div>
                <div class="desc">
                    <h3>George Washington</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ducimus itaque, autem necessitatibus voluptate quod mollitia delectus aut, sunt placeat nam vero culpa sapiente consectetur similique, inventore eos fugit cupiditate numquam!</p>
                </div>
            </div>


            <div class="pt-5 mt-5">
                <h3 class="mb-5 font-weight-bold">6 Yorumlar</h3>
                <ul class="comment-list">
                    @await Component.InvokeAsync("CommentListByBlog",new { id=ViewBag.i}) 
                    @*@await Html.PartialAsync("~/Views/Comment/CommentListByBlog.cshtml")*@
                    @await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml")
                </ul>
                <!-- END comment-list -->

                
            </div>
        </div>
    }
</div>
                        